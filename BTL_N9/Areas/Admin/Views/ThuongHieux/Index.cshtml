@model PagedList.IPagedList<BTL_N9.Models.ThuongHieu>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<div id="page-wrapper">
    <!-- dòng tiêu đề -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Danh sách thương hiệu</h1>
        </div>
    </div>
    <div class="row">

        <div class="input-group col-md-12">
            @using (Html.BeginForm())
            {
                <p>
                    Tìm thương hiệu: @Html.TextBox("SeachString", ViewBag.CurrentFilter as string)
                    <input type="submit" value="Tìm" />
                    <span style="position: absolute; right: 0;">@Html.ActionLink("Thêm", "Create", "ThuongHieux", new { @class = "btn btn-success fa fa-plus" })</span>
                </p>
            }
        </div>

    </div>
    <table class="table table-striped table-bordered" id="myTable" style="margin-top:15px;">
        <thead style="background-color:lightskyblue;">
            <tr>
                <th>
                    @Html.ActionLink("Mã thương hiệu", "Index", new { sortOrder = ViewBag.SapTheoMaThuongHieu, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    @Html.ActionLink("Tên thương hiệu", "Index", new { sortOrder = ViewBag.SapTheoTen, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    Thao tác
                </th>
            </tr>
        </thead>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <strong>
                        @Html.DisplayFor(modelItem => item.MaThuongHieu)
                    </strong>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenThuongHieu)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", "ThuongHieux", new { id = item.MaThuongHieu.Trim() }, new { @class = "btn btn-primary glyphicon glyphicon-edit" }) |
                    @Html.ActionLink("Xóa", "Delete", "ThuongHieux", new { id = item.MaThuongHieu.Trim() }, new { @class = "btn btn-danger glyphicon glyphicon-remove" })
                </td>
            </tr>
        }

    </table>
    Trang @(Model.PageCount<Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFiler = ViewBag.CurrentFilter }))
</div>
